<div id="main">
  <div class="well">
    Welcome back, <%=@current_user.first_name%>!!<br/>
    <a href="<%=user_reviews_path(@current_user)%>">Click here</a> to read your own reviews.<br/>
    <a id="main_test_jquery">Click me</a> to test the jQuery code in home.js!!
  </div>

  <div class="well">
    <h2>Would you like to review these books? Or <a href="<%=new_book_path%>">ADD</a> a new book?</h2>

    <div id="books" class="container-fluid">
      <% @books.each do |row| %>
        <div class="row">
        <% row.each do |book| %>
          <div class="col-lg-4">
            <a href="<%=new_book_review_path(book)%>">
              <img class="thumbnail" src="<%=book.url.empty? ? book.image.url(:medium) : book.url %>">
            </a>
            <ul class="list-unstyled">
              <li><h4><span class="label label-default"><%=book.title%></span></h4></li>
              <li><h4><span class="label label-default"><%=book.author%></span></h4></li>
              <li>
                <h4>
                  <span class="label label-success">
                    <i class="fa fa-file-text-o"></i> <%=book.reviews.length%> <%='review'.pluralize(book.reviews.length)%>
                  </span>
                </h4>
              </li>
              <li>
                <h4>
                  <span class="label label-warning">
                    <a href="<%=edit_book_path(book)%>">
                      <i class="fa fa-pencil"></i> Edit this book 
                    </a>
                  </span>
                </h4>
              </li>
            </ul>
          </div>
        <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div> 